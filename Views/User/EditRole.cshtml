@model CMCS.Web.Models.User

<h2>Edit Role for @Model.FullName</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" name="id" value="@Model.RoleId" />
    <select name="selectedRoleId" class="form-control">
        @foreach (var role in ViewBag.Roles)
        {
            <option value="@role.Id" selected="@(role.Id == Model.RoleId)">
                @role.RoleName
            </option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

