@{
}
@model IEnumerable<CMCS.Web.Models.User>

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.Role?.RoleName</td>
                <td><a asp-action="EditRole" asp-route-id="@u.RoleId">Edit Role</a></td>
            </tr>
        }
    </tbody>
</table>

